<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#8BC34A" /> <!-- Light green background color when pressed -->
                    <corners android:radius="20dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/trash" android:gravity="center" android:width="24dp" android:height="24dp" />
        </layer-list>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B2DFDB" /> <!-- Light green background color when focused -->
                    <corners android:radius="20dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/trash" android:gravity="center" android:width="24dp" android:height="24dp" />
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#C8E6C9" /> <!-- Light green background color -->
                    <corners android:radius="20dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/trash" android:gravity="center" android:width="24dp" android:height="24dp" />
        </layer-list>
    </item>
</selector>
