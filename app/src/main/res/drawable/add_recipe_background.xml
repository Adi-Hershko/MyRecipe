<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFA726" /> <!-- Orange background color when pressed -->
                    <corners android:radius="40dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/add_recipe" android:gravity="center" />
        </layer-list>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White background color when focused -->
                    <corners android:radius="40dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/add_recipe" android:gravity="center" />
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White background color -->
                    <corners android:radius="40dp" /> <!-- Rounded corners -->
                </shape>
            </item>
            <!-- Image -->
            <item android:drawable="@drawable/add_recipe" android:gravity="center" />
        </layer-list>
    </item>

</selector>
