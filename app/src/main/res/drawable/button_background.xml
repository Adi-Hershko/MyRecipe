<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Green background color when pressed -->
            <corners android:radius="40dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#8BC34A" /> <!-- Green background color when focused -->
            <corners android:radius="40dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00C853" /> <!-- Default green background color -->
            <corners android:radius="40dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</selector>
